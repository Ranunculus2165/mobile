<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 가게 정보 -->
    <LinearLayout
        android:id="@+id/layoutStoreInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDetailStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게 이름"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDetailStoreStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업중"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailMinOrderAndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최소주문 15,000원 · 30~40분"
            android:textSize="13sp"
            android:paddingTop="4dp" />

    </LinearLayout>

    <!-- 메뉴 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMenuList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutStoreInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 장바구니 플로팅 버튼 -->
    <LinearLayout
        android:id="@+id/layoutCartButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#20B2AA"
        android:padding="16dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_view"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvCartButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장바구니 보기"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 장바구니 아이템 개수 배지 -->
    <TextView
        android:id="@+id/tvCartBadge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/cart_badge_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/layoutCartButton"
        app:layout_constraintEnd_toEndOf="@id/layoutCartButton"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
