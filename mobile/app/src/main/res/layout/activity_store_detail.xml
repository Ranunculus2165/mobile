<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 가게 정보 -->
    <LinearLayout
        android:id="@+id/layoutStoreInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDetailStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게 이름"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDetailStoreStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업중"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetailMinOrderAndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최소주문 15,000원 · 30~40분"
            android:textSize="13sp"
            android:paddingTop="4dp" />

    </LinearLayout>

    <!-- 메뉴 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMenuList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutStoreInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
