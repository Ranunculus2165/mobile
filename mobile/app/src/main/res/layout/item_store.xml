<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="18dp">

        <!-- 썸네일(이미지 자리) -->
        <FrameLayout
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@drawable/bg_image_placeholder">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="이미지"
                android:textColor="#94A3B8"
                android:textStyle="bold"
                android:textSize="12sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 1줄: 가게명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="맘스터치 강남점"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111827" />
            </LinearLayout>

            <!-- 2줄: 예상 시간 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    android:tint="#64748B" />

                <TextView
                    android:id="@+id/tvStoreMinOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="25-35분"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#64748B" />
            </LinearLayout>

            <!-- 3줄: 배달비 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_delivery_16" />

                <TextView
                    android:id="@+id/tvStoreDeliveryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="배달비 3,000원"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#64748B" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 아이템 구분선(리스트가 자연스럽게 이어지도록) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#EEF2F7" />

</FrameLayout>
