<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:gravity="center_vertical">

        <!-- 좌측: 메뉴 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="싸이버거 세트"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:id="@+id/tvCartItemDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="싸이버거 + 감자튀김 + 음료"
                android:textSize="14sp"
                android:textColor="#64748B" />

            <TextView
                android:id="@+id/tvCartItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="8,500원"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827" />

        </LinearLayout>

        <!-- 우측: 휴지통(우측정렬) + 수량 조절 -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnRemoveItem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="삭제"
                android:padding="10dp"
                android:src="@drawable/ic_trash_20" />

            <!-- 수량 조절: 휴지통 아래 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_qty_control"
                android:paddingHorizontal="6dp"
                android:paddingVertical="6dp">

                <Button
                    android:id="@+id/btnDecreaseQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <TextView
                    android:id="@+id/tvCartItemQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:minWidth="40dp"
                    android:gravity="center"
                    android:textColor="#111827" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:background="#E5E7EB" />

                <Button
                    android:id="@+id/btnIncreaseQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:textColor="#111827"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 리스트 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#EEF2F7" />

</FrameLayout>