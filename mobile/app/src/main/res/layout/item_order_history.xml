<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 패키지 아이콘 -->
    <View
        android:id="@+id/ivPackage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 가게명 -->
    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="맘스터치 강남점"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/ivPackage"
        app:layout_constraintStart_toEndOf="@id/ivPackage"
        app:layout_constraintEnd_toStartOf="@id/tvStatus" />

    <!-- 상품 설명 -->
    <TextView
        android:id="@+id/tvItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="싸이버거 세트 외 1개"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvStoreName"
        app:layout_constraintStart_toStartOf="@id/tvStoreName"
        app:layout_constraintEnd_toEndOf="@id/tvStoreName" />

    <!-- 날짜 및 가격 -->
    <TextView
        android:id="@+id/tvOrderDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2025.11.28 · 12,500원"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemDescription"
        app:layout_constraintStart_toStartOf="@id/tvStoreName"
        app:layout_constraintEnd_toEndOf="@id/tvStoreName" />

    <!-- 배달완료 상태 버튼 -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달완료"
        android:textSize="12sp"
        android:textColor="#4CAF50"
        android:background="#E8F5E9"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/tvStoreName"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 영수증 출력 버튼 -->
    <Button
        android:id="@+id/btnReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영수증 출력"
        android:textSize="12sp"
        android:textColor="#666666"
        android:backgroundTint="#FFFFFF"
        android:drawablePadding="4dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrderDate"
        app:layout_constraintStart_toStartOf="@id/tvStoreName"
        app:layout_constraintEnd_toEndOf="@id/tvStoreName" />

    <!-- 구분선 -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnReceipt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

