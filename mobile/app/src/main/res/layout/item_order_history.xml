<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="18dp"
    android:background="#FFFFFF">

    <!-- 패키지 아이콘 -->
    <View
        android:id="@+id/ivPackage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 가게명 -->
    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="맘스터치 강남점"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/ivPackage"
        app:layout_constraintStart_toEndOf="@id/ivPackage"
        app:layout_constraintEnd_toStartOf="@id/tvStatus" />

    <!-- 상품 설명 -->
    <TextView
        android:id="@+id/tvItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="싸이버거 세트 외 1개"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvStoreName"
        app:layout_constraintStart_toStartOf="@id/tvStoreName"
        app:layout_constraintEnd_toEndOf="@id/tvStoreName" />

    <!-- 날짜 및 가격 -->
    <TextView
        android:id="@+id/tvOrderDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2025.11.28 · 12,500원"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemDescription"
        app:layout_constraintStart_toStartOf="@id/tvStoreName"
        app:layout_constraintEnd_toEndOf="@id/tvStoreName" />

    <!-- 배달완료 상태 버튼 -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달완료"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#0F766E"
        android:background="@drawable/bg_store_status_open"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/tvStoreName"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 영수증 출력 버튼 -->
    <Button
        android:id="@+id/btnReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:text="영수증 출력"
        android:textSize="12sp"
        android:textColor="#334155"
        android:background="@drawable/bg_qty_control_receipt"
        android:includeFontPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="8dp"
        android:elevation="0dp"
        android:translationZ="0dp"
        android:stateListAnimator="@null"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 아래쪽 기준(좌측 날짜 vs 우측 버튼 중 더 아래)을 잡기 위한 Barrier -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottomContentBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvOrderDate,btnReceipt" />

    <!-- 구분선 -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/bottomContentBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

