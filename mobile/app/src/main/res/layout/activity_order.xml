<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:id="@+id/layoutOrderHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnOrderBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="뒤로가기" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="주문하기"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="16dp" />

    </LinearLayout>

    <!-- 스크롤 가능한 컨텐츠 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutOrderHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutOrderFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 가게 정보 (회색 배경) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:tint="#666666" />

                <TextView
                    android:id="@+id/tvOrderStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피자헛 서초점"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- 주문 상품 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:layout_marginBottom="0dp" />

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp" />

            <!-- 결제 수단 (회색 배경) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:tint="#666666" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="결제 수단"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/tvOrderPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="포인트"
                    android:textSize="14sp"
                    android:textColor="#333333" />

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp" />

            <!-- 요청사항 (회색 배경) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="#666666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="요청사항"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etOrderRequest"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="배달 시 요청사항을 입력해주세요"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLines="5" />

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 하단 결제 정보 및 버튼 -->
    <LinearLayout
        android:id="@+id/layoutOrderFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 결제 정보 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제 정보"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 주문 금액 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="주문 금액"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvOrderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0원"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- 배달료 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="배달료"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvOrderDeliveryFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0원"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- 총 결제 금액 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 결제 금액"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvOrderTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 0P"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- 보유 포인트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보유 포인트"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvAvailablePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 0P"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- 잔여 포인트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="잔여 포인트"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvOrderRemainingPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0P"
                android:textSize="14sp"
                android:textColor="#20B2AA" />

        </LinearLayout>

        <!-- 결제 버튼 -->
        <Button
            android:id="@+id/btnOrderPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제하기"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="#20B2AA"
            android:padding="16dp" />

    </LinearLayout>

    <!-- 하단 내비게이션 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_navigation"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:itemRippleColor="@color/teal_200"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

